export component StatisticCard {
    in property <string> title;
    in property <int> value;
    in property <color> accentColor;

    Rectangle {
        width: 170px;
        height: 100px;
        border-radius: 12px;
        background: white;
        // Uncomment the following if shadows are supported in your Slint version:
        // shadow: { offset: (0, 2), blur: 6, color: "#888888" };

        HorizontalLayout {
            spacing: 0;

            // Accent stripe on the left
            Rectangle {
                width: 4px;
                background: accentColor;
                border-radius: 12px;
            }

            // Card content
            VerticalLayout {
                width: parent.width - 4px;
                padding: 8px;
                spacing: 4px;

                Text {
                    text: title;
                    font-size: 14px;
                    color: #424242;
                    font-weight: 600;
                }
                Text {
                    text: value;
                    font-size: 28px;
                    color: #212121;
                    horizontal-alignment: center;
                }
            }
        }
    }
}


